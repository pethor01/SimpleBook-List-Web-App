<%= form_with(model: author, method: :post) do |form| %>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
